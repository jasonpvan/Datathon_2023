#include<iostream>
#include<fstream>
#include<vector>
using namespace std;

void t(vector<vector<string> >mat,vector<vector<string> >&met){
    string type;
    cin>>type;
    if(type=="Sleep"){
        for(int i=0; i<9222; ++i){
            for(int j=0; j<7; ++j){
                if(mat[i][7]=="Pyjama" || mat[i][7]=="Pyjama_trousers" || mat[i][7]=="Pyjama_sweatshirt" || mat[i][7]=="Pyjamashorts" || mat[i][7]=="pyjama_shirt" || mat[i][7]=="Nightgown"){
                    met[i][j]=mat[i][j];
                    cout<< met[i][j]<<" ";
                }
            }
        }cout<<endl;
    }
}

int main(){
      //Legeix la matriu de les peces de roba
    string Comodin;
    ifstream Data("PRODUCTO_DATA_BUENO.txt");
    vector<vector<string> > mat(9222, vector<string>(7));
    vector<vector<string> >t(9222, vector<string>(7));
    for(int i=0; i<9222; ++i){
        for (int g=0; g<7;++g){
            Data>>Comodin;
            mat[i][g]=Comodin;
            //cout<< mat[i][g]<<" ";
        }
    }
    cout<<"Select type of clothes: Sleep/Beach/Overall? ";
    t(mat,t);
}




